

@{
    ViewData["Title"] = "Index";
}
@model List<ProduktMitKategorieDüo>
<table class="table table-striped">
        <thead>
            <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Preis</td>
            <td>Vorrat</td>
            <td>Kategorie</td>
            <td>ErstellungsDatum</td>
            <td>Actions</td>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
               <td>@item.ID</td>
                <td>@item.Name</td>
                 <td>@item.Preis</td>
                  <td>@item.Vorrat</td>
                   //<td>@item.Category.Name</td>
                    <td>@item.CreatedDate</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Products" asp-action="Update" asp-route-id="@item.Id">Update</a>
                          <a class="btn btn-danger" asp-controller="Products" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                        </td>
                     </tr>
            }

        </tbody>



    </table>

