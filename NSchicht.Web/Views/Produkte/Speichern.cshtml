
@{
    ViewData["Title"] = "Speichern";
}
@model ProduktDüo
<h1>Speichern</h1>
<div class="row">

    <div  class=col-md-6>

        <form asp-action="Speichern" method="post" asp-controller="Produkte">

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


              <div class="form-group">
                <label asp-for="Vorrat"></label>
                <input asp-for="Vorrat" class="form-control" />
                <span asp-validation-for="Vorrat" class="text-danger"></span>
            </div>

               <div class="form-group">
                <label asp-for="Preis"></label>
                <input asp-for="Preis" class="form-control" />
                <span asp-validation-for="Preis" class="text-danger"></span>
            </div>

               <div class="form-group">
                <label asp-for="KategorieID"></label>
                <select asp-for="KategorieID" asp-items="ViewBag.kategorien" class="form-control" ></select>
            </div>

            <div class="form-group">

                <input type="submit" value="Speichern" class="btn-primary" />

            </div>
        </form>
    </div>
</div>
